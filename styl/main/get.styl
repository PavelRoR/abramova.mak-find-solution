#get
	padding 45px 0
.example
	width 100%
	max-width 282px
	margin 0 auto 40px
	&:last-child
		margin-bottom: 0
.example_img
	width 100%
	height 157px
	background-image url(../img/example_img.jpg)
	background-repeat no-repeat
	background-position: center
	margin-bottom: 23px
.example_text
	font-size: 16px;
	font-family: "OpenSansSemiBold", sans-serif;
	line-height: 1.5;
.get_container
	position relative
	background-color: rgb(255,253,253)
	padding 40px 55px 35px
	&:before
		content ''
		height 75%
		position absolute
		top 40px
		left 90px
		width: 1px
		border-left: 2px dashed rgb(241, 59, 34);
.gets
	margin-bottom: 55px
	position relative
	overflow hidden
	&:last-child
		margin-bottom: 0
.gets
	&:before
		content: ''
		font-size: 91px;
		font-family: "OpenSansExtraBold", sans-serif;
		color: rgb(241, 59, 34);
		line-height: .7
		float left
		line-height 105px
		width 10%
		text-align: center
		margin-right: 65px
		background-color: rgb(255,253,253)
		margin-top: -18px
		padding-top: 10px
.get_1
	&:before
		content '1'
.get_2
	&:before
		content '2'
.get_3
	&:before
		content '3'
.get_4
	&:before
		content '4'
.get_inner
	float left
	width 79%
.get_container_title
	font-size: 16px;
	font-family: "OpenSansExtraBold", sans-serif;
	line-height: 1.2;
	margin-bottom: 25px
.get_list
	li
		list-style: none
		position relative
		margin-bottom: 10px
		padding-left: 23px
		font-size: 16px;
		line-height: 1.5;
		&:before
			content ''
			display block
			position: absolute
			width 9px
			height 9px
			border-radius: 50px
			background-color: rgb(255,56,27)
			left 0
			top 8px
		&:last-child
			margin-bottom: 0
.button_get
	max-width 320px
	margin-top: 30px