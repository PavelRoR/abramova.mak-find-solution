@media screen and (min-height 1300px)
	#steps
		min-height calc(100vh - 595px)

@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
@media screen and (max-width 991px)
	.video_wrapper_main
		margin-top: 30px
@media screen and (max-width 767px)
	#main
		padding 0 0 30px
	header
		padding 15px 0
		text-align: center
	.pre
		margin-top: 15px
		text-align: center
	.bot_list
		margin-bottom: 25px
	.bonus_title
	.bonus_text
		text-align: center
	.main_title
		margin 20px 0 
	.main_form_container
		max-width 360px
	.phone
	.button_mail
		float: none
		display block
		margin 0 auto 10px
		max-width 100%
	.checking
		text-align: left
		margin-top: 0
		max-width 400px
	.checking .check_label::before
		right auto
		left 0
	.checking .check_label::after
		right auto
		left  2px
	.checking .check_label
		text-align: left
		padding 0 0 0 22px
	#steps
		padding 30px 0
	.contact
		display: inline-block
@media screen and (max-width 485px)
	header
		padding 10px 0
	#logo
		max-width 160px
	.pre
		margin-top: 5px
	.main_title
		font-size: 24px
	.video_wrapper_main
		margin-top: 20px
	.general_title
		font-size: 20px
		margin-bottom: 30px
	.main_text
		margin-top: 10px
	#steps
		padding-top: 0
	footer
		padding 15px 0
	.contact
	.docs_link
		font-size: 14px
	.checking .check_label
		line-height: 18px
	.button
		font-size: 13px
@media screen and (max-width 380px)
	.main_title
		font-size: 22px
		margin 5px 0 10px
	.general_title
		font-size: 18px
		margin-bottom: 20px
	.contact
	.docs_link
		font-size: 12px
	.main_subtitle
		line-height: 1.3
	.main_text
		font-size: 16px
	.main_form_wrapper
		padding 10px
	.main_form_container
		margin-bottom: 30px
	.bot_title
		font-size: 18px
	.soc_button
		font-size: 14px
	.button
		font-size: 10px