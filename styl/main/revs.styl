#revs
	padding: 50px 0
.speak
	margin-bottom: 50px
.speaker
	display: table
	height 100px
	margin-bottom: 20px
.speak_img
	display: table-cell
	margin-right: 10px
.speaker_info
	display: table-cell
	vertical-align: middle
	// padding-left: 10px
.speak_title 
	font-size: 20px
	font-family: 'OpenSansSemiBold', sans-serif;
.speak_subtitle
	font-family: 'OpenSansLight';
.speak_text
	margin-bottom: 10px
	&:last-of-type
		margin-bottom: 0
	span
		font-family: 'OpenSansBold';
.speak_texsts
	padding 20px
	box-shadow: 0 10px 13px 5px rgb(225,230,238)
	min-height 430px
#text_revs
	width 100%
	max-width 800px
	margin 0 auto
	.owl-item
		padding: 0 20px 30px
.text_rev_img
	width 100%
	max-width 400px
	box-shadow: 0 10px 13px 5px rgb(225,230,238)
	margin 0 auto
.owl-nav
	height 0
	width 100%
	position: absolute
	left 0
	right 0
	margin 0 auto
	top calc(50% - 40px)
.owl-theme .owl-nav [class*="owl-"]
	width 40px
	height 40px
	border-radius: 50px
	font-size: 40px
	color #fff
	background-color: rgb(241,59,34)
	padding 0
	line-height: 28px
	margin: 0
.owl-prev
	position: absolute
	top 0
	left -30px
.owl-next
	position: absolute
	top 0
	right -30px
